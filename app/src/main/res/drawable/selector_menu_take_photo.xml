<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="10dp"></corners>
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"></padding>
                    <solid android:color="#DEDEDE"></solid>
                    <stroke android:color="#E3E3E3" android:width="1dp"></stroke>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/take_photo"></bitmap>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="10dp"></corners>
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"></padding>
                    <solid android:color="#fff"></solid>
                    <stroke android:color="#E3E3E3" android:width="1dp"></stroke>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/take_photo"></bitmap>
            </item>
        </layer-list>
    </item>
</selector>